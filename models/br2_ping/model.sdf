    <link name='ping_link'>
      <pose>-0.18 0 -0.095 0 0 0</pose>
      <inertial>
        <mass>0.133</mass>
        <inertia>
          <ixx>0.001</ixx>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyy>0.001</iyy>
          <iyz>0</iyz>
          <izz>0.001</izz>
        </inertia>
      </inertial>

      <visual name="ping_visual">
        <geometry>
          <cylinder>
            <length>0.035</length>
            <radius>0.024</radius>
          </cylinder>
        </geometry>
        <material>
          <emissive>0 1 0 0</emissive>
        </material>
      </visual>

      <!-- Use a gpu_lidar sensor to emulate a Ping sonar sensor -->
      <sensor name='ping_sonar' type='gpu_lidar'>
        <always_on>1</always_on>
        <update_rate>20</update_rate>
        <visualize>1</visualize>
        <topic>ping_link/sensor/sonar</topic>
        <pose>0 0 0 0 1.5707963267948966 0</pose>
        <ray>
          <!-- TODO improve this model -->
          <scan>
            <horizontal>
              <samples>5</samples>
              <resolution>1</resolution>
              <min_angle>-0.14835</min_angle>
              <max_angle>0.14835</max_angle>
            </horizontal>
            <vertical>
              <samples>3</samples>
              <resolution>1</resolution>
              <min_angle>0</min_angle>
              <max_angle>0.14835</max_angle>
            </vertical>
          </scan>
          <range>
            <min>0.2</min>
            <max>50</max>
            <resolution>0.02</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.1</mean>
            <stddev>0.005</stddev>
          </noise>
        </ray>
      </sensor>
    </link>

    <joint name='ping_joint' type='revolute'>
      <parent>base_link</parent>
      <child>ping_link</child>
      <axis>
        <xyz>0 0 1</xyz>
      </axis>
    </joint>

    <plugin name="ArduPilotPlugin" filename="libArduPilotPlugin.so">
      <!-- Port settings -->
      <fdm_addr>127.0.0.1</fdm_addr>
      <fdm_port_in>9002</fdm_port_in>
      <connectionTimeoutMaxCount>5</connectionTimeoutMaxCount>
      <lock_step>1</lock_step>

      <!-- Transform from the Gazebo body frame (x-forward, y-left, z-up)
           to the ArduPilot body frame (x-forward, y-right, z-down) -->
      <modelXYZToAirplaneXForwardZDown>0 0 0 3.141592653589793 0 0</modelXYZToAirplaneXForwardZDown>

      <!-- Transform from the Gazebo world frame (ENU)
           to the ArduPilot world frame (NED) -->
      <gazeboXYZToNED>0 0 0 3.141592653589793 0 1.5707963267948966</gazeboXYZToNED>

      <!-- Sensors -->
      <imuName>imu_sensor</imuName>

      <!-- Thrusters -->
